.goods
  display flex
  flex-wrap wrap
  width 100%
  margin-top 10px
  t()

  &-item
    width 33.333%
    padding 8px
    +to-width(640px)
      width 50%
    +to-width(420px)
      width 100%

    &_big
      width 66.666%
      +to-width(640px)
        width 100%

      .goods-info
        display flex
        justify-content space-between

      .goods__image
        height 180px
        +to-width(420px)
          height 120px

  &-container
    background #f5f5f5
    border 5px solid #f5f5f5
    padding 20px
    min-height 320px
    max-height 320px
    position relative
    display flex
    flex-direction column
    justify-content flex-end
    overflow hidden
    cursor pointer
    t()
    &:hover
      border 5px solid #fef117

      .goods__image, .goods-info, .goods__have
        transform translateY(0px)
    +to-width(800px)
      padding 10px

  &__image
    width 100%
    height 120px
    position relative
    z-index 1
    background-size contain
    background-position bottom center
    background-repeat no-repeat
    transition 0.4s all
    transform translateY(30px)

  &-info
    margin-top 50px
    transition 0.4s all
    transform translateY(30px)

  &__title
    font-size 14px
    text-transform uppercase

  &__text
    margin-top 5px

  &__price
    font-size 16px
    text-transform uppercase
    margin-top 15px


  &__have
    margin-top 20px
    text-transform uppercase
    color rgba(0, 0, 0, 0.5)
    transition 0.2s all ease-in
    transition-delay 0.1s
    transform translateY(30px)
    span
      font-size 11px

  &__like
    position absolute
    z-index 2
    left 20px
    top 20px
    height 14px
    width 14px
    background-size cover
    background-position center
    background-image url('data:image/svg+xml;base64,')
    &:hover
      background-image url('data:image/svg+xml;base64,')
    &.active
      background-image url('data:image/svg+xml;base64,')

.pagination
  display flex
  justify-content center
  margin-top 40px
  t()

  &__item
    font-size 1.6em
    margin-right 4px
    border 2px solid transparent
    padding 2px 5px
    padding-top 3px
    cursor pointer
    t()
    &.active
      border 2px solid #141414
    &:hover
      border 2px solid #141414
    &:last-child
      margin-right 0

  &__nothing
    margin-right 4px
    margin-top 5px
    font-size 1.6em
