          ul.filter-list
            li.filter-item(data-filter="small")
              p.filter-item__text Узкая
              .filter-item__close
            li.filter-item(data-filter="middle")
              p.filter-item__text Средняя
              .filter-item__close
            li.filter-item(data-filter="big")
              p.filter-item__text Полная
              .filter-item__close
        .filter
          h4.filter__title Размер
          ul.filter-list
            li.filter-item(data-filter="size39")
              p.filter-item__text 39
              .filter-item__close
            li.filter-item(data-filter="size40")
              p.filter-item__text 40
              .filter-item__close
            li.filter-item(data-filter="size41")
