              p.filter-item__text 43
              .filter-item__close
            li.filter-item(data-filter="size44")
              p.filter-item__text 44
              .filter-item__close
          .filter-more Показать все
          
        .filter
          h4.filter__title Цвет 
          ul.filter-list
            li.filter-item(data-filter="red")
              .filter-item__color(style="background-color: red;")
              p.filter-item__text Красный
              .filter-item__close
            li.filter-item(data-filter="black")
              .filter-item__color(style="background-color: black;")
              p.filter-item__text Черный
              .filter-item__close
            li.filter-item(data-filter="white")
              .filter-item__color(style="background-color: white;")
              p.filter-item__text Белый
              .filter-item__close
            li.filter-item(data-filter="blue")
              .filter-item__color(style="background-color: blue;")
              p.filter-item__text Синий
              .filter-item__close
            li.filter-item(data-filter="gray")
              .filter-item__color(style="background-color: gray;")
              p.filter-item__text Серый
              .filter-item__close
            li.filter-item(data-filter="yellow")
              .filter-item__color(style="background-color: yellow;")
              p.filter-item__text Желтый
              .filter-item__close
          .filter-more Показать все
        
        .filter-button Все фильтры
      
